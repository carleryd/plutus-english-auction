library
  hs-source-dirs:      src
  exposed-modules:     EnglishAuction
                     , Deploy
                     , Monitor
                     , PAB
                     , Token.OffChain
                     , Token.OnChain
                     , Utils
                     , Plutus.Contract.Test.Coverage.ReportCoverage
                     , SendContract
  build-depends:       aeson
                     , base ^>=4.14.1.0
                     , cardano-crypto-class
                     , cardano-ledger-core
                     , containers
                     , data-default
                     , plutus-contract
                     , plutus-use-cases
                     , plutus-ledger
                     , plutus-ledger-constraints
                     , plutus-tx-plugin
                     , plutus-tx
                     , text
                     , cardano-wallet-core
                     , cardano-api
                     , serialise
                     , bytestring
                     , openapi3
                     , plutus-ledger-api
                     , prettyprinter
                     , plutus-pab
                     , req ^>= 3.9.0
                     , html-entities
                     , playground-common
  default-language:    Haskell2010
  ghc-options:         -Wall -fobject-code -fno-ignore-interface-pragmas -fno-omit-interface-pragmas -fno-strictness -fno-spec-constr -fno-specialise

executable token-pab
  main-is: token-pab.hs
  hs-source-dirs:      app
  ghc-options:         -Wall -threaded -rtsopts -with-rtsopts=-N
